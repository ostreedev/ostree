tests/%-symlink-stamp: % Makefile
	$(AM_V_GEN) set -e; \
	lt_bin=`cd $(top_builddir) && ./libtool --mode=execute echo $*`; \
	if test "$${lt_bin}" = "$*"; then \
		real_bin=$(abs_top_builddir)/$*; \
	else \
		real_bin="$${lt_bin}"; \
	fi; \
	ln -sf "$${real_bin}" tests/$*; \
	touch $@

